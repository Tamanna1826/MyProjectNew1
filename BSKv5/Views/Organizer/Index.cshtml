@model IEnumerable<BSKv5.Models.Organizer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.orgName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.orgPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.orgEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.orgPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.orgName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orgPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orgEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orgPassword)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.orgID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.orgID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.orgID" class=" text-danger nl-1" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
